    </div>
  </form>
</div>

<script>
/*Variables to control the open and close of the popups*/
var popup = "login";
var policy = false;

/*To open LogIn*/
function openLogInForm() {
  document.getElementById("login").style.display = "block";
  document.getElementById("website").style.filter = "blur(5px)";
  popup = "login";
}
/*To open SignIn*/
function openSignInForm() {
  document.getElementById("signin").style.display = "block";
  document.getElementById("website").style.filter = "blur(5px)";
  popup = "signin";
}
/*To open Privacy Policy*/
function openPolicy() {
  document.getElementById("policy").style.display = "block";
  document.getElementById("website").style.filter = "blur(5px)";
  policy = true;
}
/*To close Privacy Policy*/
function closePolicy() {
  document.getElementById("policy").style.display = "none";
  policy = false;
}
/*To close Pop ups by touching out of it*/
document.addEventListener('mouseup', function(e) {
    var container = document.getElementById(popup);
    if (!container.contains(e.target) && !policy) {
        container.style.display = 'none';
        document.getElementById("policy").style.display = "none";
        document.getElementById("website").style.filter = "blur(0px)";
    }
});

</script>

</body>
</html>
